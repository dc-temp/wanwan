<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/usercenter_head_backgroud" android:paddingBottom="15.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">

 
  
    
    <RelativeLayout
        android:id="@+id/center_my"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >
        <TextView
            android:id="@id/text_geren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/user_center_head_titlemargintop"
            android:text="@string/user_center"
            android:textColor="@color/usercenter_head_font_color"
            android:textSize="@dimen/user_center_head_title_font_size" />

        <ImageView
            android:id="@id/imag_personal"
            android:layout_width="90.0dip"
            android:layout_height="90.0dip"
            android:layout_below="@id/text_geren"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15.0dip"
            android:src="@drawable/btn_geren" />

        <RelativeLayout
            android:id="@id/layout_dengru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imag_personal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/user_center_head_usernamemargintop"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@id/text_dengru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/login_account"
                android:textColor="@color/usercenter_head_font_color"
                android:textSize="@dimen/user_center_head_username_font_size" />

            <ImageView
                android:id="@id/imag_personal_jinru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/user_center_entryimage_marginright"
                android:layout_toRightOf="@id/text_dengru"
                android:src="@drawable/btn_geren_jinru" />
        </RelativeLayout>
        
    </RelativeLayout>

     <FrameLayout
         android:id="@id/back"
         android:layout_width="60dp"
         android:layout_height="60dp" >

       <ImageView
        android:id="@id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@drawable/icon1110" />
    
  </FrameLayout>
</RelativeLayout>